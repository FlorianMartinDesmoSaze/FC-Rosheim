{% extends 'base.html.twig' %}
{% block title %}Page d'accueil - FC Rosheim{% endblock %}
{% block meta_description %}Bienvenue sur l'application web du Football Club de Rosheim situé dans la commune du même nom dans le Bas-Rhin{% endblock %}
{% block content %}
    <div class="container-fluid ">
        <div class="flex flex-column align-items-center justify-content-md-center full-height">
        <div class="news-container">
                {% for new in news %}
            <div class="col-md-4 justify-content-md-center flex align-items-center card card-news card-{{new.id}}">
                <h1>{{ new.title }}</h1>
            </div>
                {% endfor %}
        </div>
        {{ include ("include/_down_arrow.html.twig") }}
        </div>
    </div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
<div class="full-height flex align-items-center">
        <aside class="col-md-3">
            <div class="sidebar">
                <ul>
                    <a href="{{ path('profile', {'id': app.user.id}) }}"><li>Mes Informations</li></a>
                    <a href="#"><li>Mon équipe favorite</li></a>
                    <a href="{{path('user_edit', {'id': app.user.id})}}"><li>Modifier mes informations</li></a>
                    <a href="{{path('app_logout')}}"><li id="logout">Se déconnecter</li></a>
                </ul>
            </div>
        </aside>
        <main class="col-md-4 offset-md-1">
            <div class="card">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="redline"></div>
                    <button class="btn btn-primary">{{ button_label|default('Modifier') }}</button>
                {{ form_end(form) }}
                <a class="" href="{{path('update_password', {'id': app.user.id})}}" title="Modifier le mdp">Modifier le mdp</a>
        </main>
    </div>
</div>
{% endblock %}
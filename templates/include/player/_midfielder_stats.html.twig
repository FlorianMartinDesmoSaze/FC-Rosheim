<div class="overlay"></div>
<figcaption><h3>{{ midfielder.firstName ~ ' ' ~ midfielder.lastName }}</h3></figcaption>
<span class="number">{{ midfielder.number }}</span>
{% for stat in stats %} {# we get our stat list #}
    {% if stat.player.id is same as(midfielder.id)  %} {# to avoid problems with for we verify player.id #} 
        <div class="player-info">
            <span class="stat-games">{{stat.gamePlayed}}<p class="stat-desc"> Match jou√©s</p></span>
            <span class="stat-botleft">{{stat.assists}}<p class="stat-desc">Passes D.</p></span>
            <span class="stat-botright">{{stat.goals}}<p class="stat-desc">Buts</p></span>
        </div>
    {% endif %}
{% endfor %}
{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Opponent</th>
                <td>{{ game.opponent }}</td>
            </tr>
            <tr>
                <th>ScoreTeam</th>
                <td>{{ game.scoreTeam }}</td>
            </tr>
            <tr>
                <th>ScoreOpponent</th>
                <td>{{ game.scoreOpponent }}</td>
            </tr>
            <tr>
                <th>GameDate</th>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Home</th>
                <td>{{ game.home ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}

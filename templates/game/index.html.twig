{% extends 'base.html.twig' %}

{% block title %}Liste des matchs - FC Rosheim{% endblock %}
{% block meta_description %}Liste des matchs du FC Rosheim{% endblock %}

{% block content %}
    <h1>Matchs pass√©s</h1>
        {% for passedGame in passedGames %}
            {% if passedGame.home == 1 %}
                <div class="flex">
                    <h3>{{passedGame.team.teamName}} 
                        <span class="{{(passedGame.scoreTeam < passedGame.scoreOpponent) ? 'loose' : 'win'}}">{{ passedGame.scoreTeam }} </span> - 
                        <span class="{{(passedGame.scoreTeam > passedGame.scoreOpponent) ? 'loose' : 'win'}}">{{ passedGame.scoreOpponent }}</span>
                        {{passedGame.opponent}}
                    </h3>
                </div>
            {% endif %}
                <td>{{ passedGame.scoreOpponent }}</td>
                <td>{{ passedGame.gameDate ? passedGame.gameDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ passedGame.home ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': passedGame.id}) }}">show</a>
                    <a href="{{ path('game_edit', {'id': passedGame.id}) }}">edit</a>
        {% else %}
                <td colspan="7">no records found</td>
        {% endfor %}

    <a href="{{ path('game_new') }}">Create new</a>
{% endblock %}

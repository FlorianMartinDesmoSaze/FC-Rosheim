{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    
    <div class="full-height flex align-items-center">
        {{ include ("include/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/_admin_title.html.twig') }}
                <div class="card">
                <h1 class="display-2">Gestion des Événements</h1>
                <table class="table table-striped table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Créateur</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Type</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Emplacement</th>
                        </tr>
                    </thead>
                    <tbody id="table_body">
                    {% for event in eventRepository %}
                        <tr onclick="window.location='{{ path('admin_events', {'id': event.id}) }}'"
                            style='cursor: pointer;'>
                            <td>{{ event.id }}</td>
                            <td>
                            {% if event.user_id|default %}
                                {{ event.user_id }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if event.title|default %}
                                {{ event.title }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if event.description|default %}
                                {{ event.description }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  event.type|default %}
                                {{ event.type }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  event.start_date|default %}
                                {{ event.start_date }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  event.end_date|default %}
                                {{ event.end_date }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  event.location|default %}
                                {{ event.location }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucun événement trouvé.
                                Cliquez sur le bouton ci-dessous pour commencer à en renseigner !</td>
                        </tr>
                    {% endfor %}
                </table>
                <button class='btn btn-primary clickable' onclick="window.location='#'">Créer un nouvel Évènement</button>
                </div>
        </main>
    </div>
</div>
{% endblock content %}
{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    
    <div class="full-height flex align-items-center">
        {{ include ("include/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/_admin_title.html.twig') }}
                <div class="card">
                <h1 class="display-2">Gestion des Équipes</h1>
                <table class="table table-striped table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Prénom</th>
                            <th>Rôle</th>
                            <th>Téléphone</th>
                            <th>E-mail</th>
                        </tr>
                    </thead>
                    <tbody id="table_body">
                    {% for staff in staffRepository %}
                        <tr onclick="window.location='{{ path('admin_staff', {'id': staff.id}) }}'"
                            style='cursor: pointer;'>
                            <td>{{ staff.id }}</td>
                            <td>
                            {% if staff.firstName|default %}
                                {{ staff.firstName }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if staff.position|default %}
                                {{ staff.position }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  staff.phone|default %}
                                {{ staff.phone }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                                {% if  staff.email|default %}
                                    {{ staff.email }}
                                {% else %}
                                    Non renseigné
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucun membre du staff trouvé.
                                Cliquez sur le bouton ci-dessous pour commencer à en renseigner !</td>
                        </tr>
                    {% endfor %}
                </table>
                <button class='btn btn-primary clickable'
                        onclick="window.location='#'">Créer une nouvelle entrée</button>
                </div>
        </main>
    </div>
</div>
{% endblock content %}
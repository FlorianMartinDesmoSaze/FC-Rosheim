{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card admin">
                <h1 class="display-2">Nouveau·elle Joueurs·euses</h1>
                    {{ form_start(form, {attr: {class: 'form-players-submit'}}) }}
                    <table class="table table-striped table-dark table-hover">
                        <tbody>
                            <tr>
                                <th>Prénom</th>
                                <td>
                                    {{ form_widget(form.firstName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Nom de famille</th>
                                <td>
                                    {{ form_widget(form.lastName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Numéro</th>
                                <td>
                                    {{ form_widget(form.number) }}
                                    {{ form_errors(form.number) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>
                                    {{ form_widget(form.birthdate) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Équipe</th>
                                <td>
                                    {{ form_widget(form.team) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Position</th>
                                <td>
                                    {{ form_widget(form.position) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Photo</th>
                                <td>
                                    {{ form_widget(form.picture) }}
                                    {{ form_errors(form.picture) }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        <button class='btn btn-primary' id='admin_save_button' type="submit">Sauvegarder</button>
                {{ form_end(form) }}
                </div>
        </main>
    </div>
</div>
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adminLeaveWarning') }}
{% endblock %}
{% endblock content %}
{% extends 'base.html.twig' %}


{% block title %}{{ include('admin/_title.html.twig') }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card admin">
                <h1 class="display-2">Nouveau match</h1>
                    {{ form_start(form, {attr: {class: 'form-user-submit'}}) }}
                    <table class="table table-striped table-dark table-hover">
                        <tbody>
                            <tr>
                                <th>Équipe</th>
                                <td id="results_team">
                                    {{ form_widget(form.team) }}
                                    {{ form_errors(form.team) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Adversaire</th>
                                <td id="results_opponent">
                                    {{ form_widget(form.opponent) }}
                                    {{ form_errors(form.opponent) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Score équipe</th>
                                <td id="results_scoreTeam">
                                    {{ form_widget(form.scoreTeam) }}
                                    {{ form_errors(form.scoreTeam) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Score adversaire</th>
                                <td id="results_scoreOpponent">
                                    {{ form_widget(form.scoreOpponent) }}
                                    {{ form_errors(form.scoreOpponent) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Date du match</th>
                                <td id="results_gameDate">
                                    {{ form_widget(form.gameDate) }}
                                    {{ form_errors(form.gameDate) }}
                                </td>
                            </tr>
                            <tr>
                                <th>À domicile</th>
                                <td id="results_home">
                                    {{ form_widget(form.home) }}
                                    {{ form_errors(form.home) }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        <button class='btn btn-primary' id='admin_save_button' type="submit">Sauvegarder</button>
                {{ form_end(form) }}
                </div>
        </main>
    </div>
</div>
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adminLeaveWarning') }}
{% endblock %}
{% endblock content %}
{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card admin">
                <h1 class="display-2">Gestion du Staff</h1>
                    {{ form_start(form, {attr: {class: 'form-user-submit'}}) }}
                    <table class="table table-striped table-dark table-hover">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ staff.id }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td id="staff_firstName">
                                    {{ form_widget(form.firstName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Nom de famille</th>
                                <td id="staff_lastName">
                                    {{ form_widget(form.lastName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>E-mail</th>
                                <td id="staff_email">
                                    {{ form_widget(form.email) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td id="staff_phone">
                                    {{ form_widget(form.phone) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Compte Utilisateur</th>
                                <td id="staff_account">
                                    {{ form_widget(form.user) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Responsabilité</th>
                                <td id="staff_position">
                                    {{ form_widget(form.position) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Photo</th>
                                <td>
                                    {{ form_widget(form.picture) }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        <button class='btn btn-primary' id='admin_save_button' type="submit">Sauvegarder</button>
                        <button id="admin_delete_button" class="btn btn-outline-warning" form="delete_form">Supprimer</button>
                {{ form_end(form) }}
                    <form id="delete_form" method="post" action="{{ path('admin_staff_delete', {id: staff.id}) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ staff.id) }}">
                    </form>
                </div>
        </main>
    </div>
</div>
{% block javascripts %}
    {{ parent() }}
    {{ include('include/admin/_admin_js.html.twig') }}
{% endblock %}
{% endblock content %}
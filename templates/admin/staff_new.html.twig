{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card">
                <h1 class="display-2">Nouveau Staff</h1>
                    {{ form_start(form, {attr: {class: 'form-user-submit'}}) }}
                    <table class="table table-striped table-dark table-hover">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>E-mail</th>
                                <td id="user_email">
                                    {{ form_widget(form.email) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Pseudonyme</th>
                                <td id="user_nickname">
                                    {{ form_widget(form.nickname) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td id="user_firstName">
                                    {{ form_widget(form.first_name) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Nom de famille</th>
                                <td id="user_lastName">
                                    {{ form_widget(form.lastName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td id="user_phone">
                                    {{ form_widget(form.phone) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td id="user_birthDate">
                                    {{ form_widget(form.birthdate) }}
                                </td>
                            </tr>
                            <tr>
                                <th>License</th>
                                <td id="user_license">
                                    {{ form_widget(form.license) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Équipe</th>
                                <td id="user_team">
                                    {{ form_widget(form.team) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Responsabilité</th>
                                <td id="user_staff">
                                    {{ form_widget(form.staff) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Rôles</th>
                                <td id="user_roles">
                                    {{ form_widget(form.roles) }}
                                </td>
                            </tr>
                            <tr>
                                <th>E-mail vérifié</th>
                                <td id="user_isVerified">
                                    {{ form_widget(form.isVerified) }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        <button class='btn btn-primary' id='admin_save_button' type="submit">Sauvegarder</button>
                {{ form_end(form) }}
                </div>
        </main>
    </div>
</div>
{% block javascripts %}
    {{ parent() }}
    {{ include('include/_admin_js.html.twig') }}
{% endblock %}
{% endblock content %}
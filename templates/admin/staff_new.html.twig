{% extends 'base.html.twig' %}


{% block title %}{{ include('admin/_title.html.twig') }}{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card admin">
                <h1 class="display-2">Nouveau Staff</h1>
                    {{ form_start(form, {attr: {class: 'form-user-submit'}}) }}
                    <table class="table table-striped table-dark table-hover">
                        <tbody>
                            <tr>
                                <th>Prénom</th>
                                <td id="staff_firstName">
                                    {{ form_widget(form.firstName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Nom de famille</th>
                                <td id="staff_lastName">
                                    {{ form_widget(form.lastName) }}
                                </td>
                            </tr>
                            <tr>
                                <th>E-mail</th>
                                <td id="staff_email">
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td id="staff_phone">
                                    {{ form_widget(form.phone) }}
                                    {{ form_errors(form.phone) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Compte Utilisateur</th>
                                <td id="staff_account">
                                    {{ form_widget(form.user) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Responsabilité</th>
                                <td id="staff_position">
                                    {{ form_widget(form.position) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Photo</th>
                                <td>
                                    {{ form_widget(form.picture) }}
                                    {{ form_errors(form.picture) }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        <button class='btn btn-primary' id='admin_save_button' type="submit">Sauvegarder</button>
                {{ form_end(form) }}
                </div>
        </main>
    </div>
</div>
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adminLeaveWarning') }}
{% endblock %}
{% endblock content %}
{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card admin">
                <h1 class="display-2">Gestion des Événements</h1>
                    {{ form_start(form, {attr: {class: 'form-events-submit'}}) }}
                    <table class="table table-striped table-dark table-hover">
                        <tbody>
                            <tr>
                                <th>Titre</th>
                                <td>
                                    {{ form_widget(form.title) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Créateur·ice</th>
                                <td>
                                    {{ form_widget(form.user) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>
                                    {{ form_widget(form.description) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>
                                    {{ form_widget(form.type) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Date de début</th>
                                <td>
                                    {{ form_widget(form.startDate) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Date de fin</th>
                                <td>
                                    {{ form_widget(form.endDate) }}
                                </td>
                            </tr>
                            <tr>
                                <th>Emplacement</th>
                                <td>
                                    {{ form_widget(form.location) }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                        <button class='btn btn-primary' id='admin_save_button' type="submit">Sauvegarder</button>
                {{ form_end(form) }}
                </div>
        </main>
    </div>
</div>
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adminLeaveWarning') }}
{% endblock %}
{% endblock content %}
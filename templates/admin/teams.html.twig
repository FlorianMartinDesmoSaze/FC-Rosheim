{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    
    <div class="full-height flex align-items-center">
        <aside class="col-md-3">
            <div class="sidebar">
                <ul>  
                    <a href="{{ path('admin_users') }}"><li id='select_users'>Gestion utilisateur</li></a>
                    <a href="{{ path('admin_news') }}"><li id='select_news'>News</li></a>
                    <a href="{{ path('admin_teams') }}"><li id='select_teams'>Équipes</li></a>
                    <a href="{{ path('admin_results') }}"><li id='select_results'>Résultats</li></a>
                    <a href="{{ path('admin_events') }}"><li id='select_events'>Évenements</li></a>
                </ul>
            </div>
        </aside>
        <main class="col-md-8 full-height">
            <h1 class='display-1 text-center'>PANNEAU D'ADMINISTRATION</h1>
                <div class="card">
                <h1 class="display-2">Gestion des Équipes</h1>
                <table class="table table-striped table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Saison</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody id="table_body">
                    {% for team in teamRepository %}
                        <tr class='clickable' onclick="window.location='{{ path('admin_teams', {'id': team.id}) }}'">
                            <td>{{ team.id }}</td>
                            <td>
                            {% if team.name|default %}
                                {{ team.name }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if team.season|default %}
                                {{ team.season }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  team.picture|default %}
                                {{ team.picture }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Pas d'équipes trouvées.</td>
                        </tr>
                    {% endfor %}
                </table>
                <button class='btn btn-primary clickable' onclick="window.location='#'">Créer une nouvelle Équipe</button>
                </div>
        </main>
    </div>
</div>
{% endblock content %}
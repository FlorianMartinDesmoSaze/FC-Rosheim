{% extends 'base.html.twig' %}


{% block title %}Mon profil - FC Rosheim{% endblock %}

{% block content %}
<div class="container-fluid">
    
    <div class="full-height flex align-items-center">
        {{ include ("include/admin/_admin_sidepanel.html.twig") }}
        <main class="col-md-8 full-height">
            {{ include('include/admin/_admin_title.html.twig') }}
                <div class="card">
                <h1 class="display-2">Gestion des Équipes</h1>
                <table class="table table-striped table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Saison</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody id="table_body">
                    {% for team in teamRepository %}
                        <tr>
                            <td>{{ team.id }}</td>
                            <td style='cursor: pointer;' onclick="window.location='{{ path('admin_teams_edit', {'id': team.id}) }}'">
                            {% if team.teamName|default %}
                                {{ team.teamName }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td style='cursor: pointer;' onclick="window.location='{{ path('admin_teams_edit', {'id': team.id}) }}'">
                            {% if team.season|default %}
                                {{ team.season }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                            <td>
                            {% if  team.picture|default %}
                                <a href="{{ team.picture }}" target="_blank">{{ team.picture }}</a>
                            {% else %}
                                Non renseigné
                            {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucune équipe trouvée.
                                Cliquez sur le bouton ci-dessous pour commencer à en renseigner !</td>
                        </tr>
                    {% endfor %}
                </table>
                <button class='btn btn-primary clickable' onclick="window.location='#'">Créer une nouvelle Équipe</button>
                </div>
        </main>
    </div>
</div>
{% endblock content %}